<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>

        <form class="form login-form">
            <div class="form-group">
                <label for="email-login">Username:</label>
                <input type="text" class="form-control" id="username" aria-describedby="username" placeholder="Enter username">
            </div>

            <div class="form-group">
                <label for="password-login">Password:</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
            </div>

             <button type="submit" id ="loginBtn" class="btn btn-primary">Login</button>
             <br>
             <br>
            <button type="submit" id ="signupBtn" class="btn btn-primary">Signup</button>
        </form>
    </div>
    

<script src="./js/login.js"></script>